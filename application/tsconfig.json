{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    // module related settings
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // programming / code style guides related settings
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "allowJs": false,
    "skipLibCheck": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    // development / project setup related settigns
    "outDir": "build",
    "rootDir": ".",
    "baseUrl": "./src",
    "noEmit": true,
    "noEmitOnError": true,
    "sourceMap": true, // enables to display original TS code in debugging
    // jsx/react related settings
    "jsx": "react"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
  ],
  "exclude": [
    "test/fixtures/**/*.*",
    "template/**/*.*",
    "node_modules",
    "build",
    "scripts"
  ]
}
